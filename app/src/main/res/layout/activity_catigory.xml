<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="5dp"
            android:padding="8dp"
            android:background="@color/category_folk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dd"
                />
            <TextView
                android:textSize="40sp"
                android:layout_gravity="center"
                android:id="@+id/folk"
                style="@style/CategoryStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="folk ;)" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/category_classic"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mm" />

            <TextView
                android:textSize="40sp"
                android:layout_gravity="center"
                android:id="@+id/classic"
                style="@style/CategoryStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="classic :(" />

        </LinearLayout>



        <LinearLayout
            android:layout_margin="5dp"
            android:background="@color/category_rock"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yy"
                />
            <TextView
                android:textSize="40sp"
                android:layout_gravity="center"
                android:id="@+id/rock"
                style="@style/CategoryStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rock ;)" />
        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/category_hibhob"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/oo"
                />

            <TextView
                android:textSize="40sp"
                android:layout_gravity="center"
                android:id="@+id/hibhob"
                style="@style/CategoryStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hip_hop :)" />
        </LinearLayout>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/gooplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Goo to play -->>"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>

</ScrollView>